    <div id="cesiumContainer"></div>
    <div class="loading-screen">
        <div class="loading-icon"></div>
        <div class="loading-text">
            <h1>Loading...</h1>
        </div>
    </div>

    <button class="view-button">üåç</button>

    <div id="popup" style="display: none; z-index: 1000;">
        <h2 translate="no">ISS</h2>
        <div class="popup-content">
            <h4><strong>Time:</strong> <span id="time"></span></h4>
            <h4><strong>Latitude:</strong> <span id="latitude"></span></h4>
            <h4><strong>Longitude:</strong> <span id="longitude"></span></h4>
            <h4><strong>Altitude:</strong> <span id="altitude"></span></h4>
            <h4><strong>Velocity:</strong> <span id="velocity"></span></h4>
            <h4><strong>Visibility:</strong> <span translate="no" id="visibility"></span></h4>
        </div>
        <div id="popup-arrow"></div>
    </div>

    <div id="info-container">
        <div class="align-info-content">
            <h2 translate="no">ISS</h2>
            <div class="info-content">
                <h4><strong>Time:</strong> <span id="info-time"></span></h4>
